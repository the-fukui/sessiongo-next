{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    // "outFile": "lib/index.js",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noEmit": false,
    "resolveJsonModule": false,
    "isolatedModules": false
  },
  "compileOnSave": true,
  "include": ["src", "../../shared/**/*.ts"]
}
