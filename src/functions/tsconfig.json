{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    // "outFile": "lib/index.js",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "noEmit": true,
    "resolveJsonModule": false,
    "isolatedModules": false
  },
  "compileOnSave": true,
  "include": ["src", "../shared/**/*.ts"]
}
